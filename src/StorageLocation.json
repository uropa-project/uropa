{
  "description": "Place where the data is stored (location or geospatial scope)",
  "x-stoplight": {
    "id": "e12d157ed32c7"
  },
  "type": "object",
  "title": "StorageLocation",
  "properties": {
    "description": {
      "type": "string",
      "description": "Provides a general description of the data location",
      "example": "Shared VM hosted by OVH"
    },
    "path": {
      "type": "string",
      "minLength": 1,
      "example": "/db/emailing-db/table/contacts/column/email",
      "description": "Specifies the path to access where the data item is stored"
    },
    "storageMedium": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "support": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "storageState": {
      "type": "string",
      "enum": [
        "production",
        "legal",
        "archives"
      ],
      "example": "production",
      "description": "Provides information about the state of the storage"
    },
    "storageDurations": {
      "type": "array",
      "items": {
        "$ref": "./StorageDuration.json"
      }
    }
  },
  "required": [
    "storageState",
    "storageDurations"
  ]
}